<!-- views/Arrays.ejs -->
<!doctype html>
<html>
<head>
    <% include includes/head.ejs %>
    <!-- Custom styles for this template -->
    <link href="/resources/css/dashboard.css" rel="stylesheet">

    <!-- socket.io session name-->    
    <script>
        window.userId = "<%= req.user.username %>";
        window.apiKey = "<%= req.user.apiKey %>";
        window.arrayIdFromQueryString = "<%= queryString.arrayId %>";
    </script>

    <!-- socket.io import --> 
    <% include includes/socketio.ejs %>

    <script src="/resources/js/socketOps.js"></script>
    <script>
        window.onload = lookUpArrayInfo(<%= queryString.arrayId %>);
    </script>

</head>
<body>
    <% include includes/navBar.ejs %>
    <div class="container-fluid">
      <div class="row">
        <% include includes/sideBar.ejs %>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header">Array Info</h1>
            <div hidden class="alert alert-danger" role="alert" id="badArrayNumber">This array does not exist.</div>
            <div hidden id="editAndSaveDiv">
                <button type="submit" class="btn btn-primary" id="editAndSaveArrayButton">Edit Array</button>
            </div>

            <table class="table" id="arrayPropertiesTable" style="max-width: fit-content">
                <thead>
                    <tr>
                        <th>Property</th>
                        <th>Value</th>                        
                    </tr>
                </thead>
                <tbody>                                      
                
                </tbody>
            </table>
            
        <h1 class="page-header"></h1>

            <table class="table" id="arrayDownloadTable" style="max-width: fit-content">
                <thead>
                    <tr>
                        <th>Filename</th>
                        <th>Size (Bytes)</th>                        
                        <th>Download</th>
                    </tr>
                </thead>
                <tbody>
                                    
                </tbody>
            </table>

        <h1 class="page-header"></h1>

            <textarea id="textDescription" rows="4" cols="50" disabled="disabled">No description found.</textarea>
                       
        </div>
      </div>
    </div>

    <% include includes/bootstrapCoreInclude.ejs %>
    
</body>
</html>
